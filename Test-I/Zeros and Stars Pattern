import java.util.Scanner;

public class Solution {

	public static void main(String[] args) {

		Scanner s = new Scanner(System.in);
        int N = s.nextInt();
        int col = 2 * N + 1;
        for(int i = 1; i <= N; i++){
            
            for(int j = 1; j <= col; j++){
                
                if(i == j || j == N + 1 || i + j == col + 1 )
                    System.out.print("*");
                else
                    System.out.print("0");
                    
                
            }
            System.out.println();
        }
        
	}	


}
