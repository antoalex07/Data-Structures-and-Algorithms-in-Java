
public class Solution {

	public static String removeConsecutiveDuplicates(String str) {
		
        char ch = str.charAt(0);
        String str1 = "";
        str1 += ch;
        for(int i = 0; i < str.length(); i++){
            
            if(ch != str.charAt(i)){
                str1 = str1 + str.charAt(i);
            	ch = str.charAt(i);
            }    
        }
		return str1;
    }

}
